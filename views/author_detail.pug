extends layout

block content

	h1 Author: #{author.name}
	p #{author.lifespan}
	hr
	div(style='margin-left:20px;margin-top:20px')
		h4 Books
		
		dl
			each book in authors_books
				dt
					a(href=book.url) #{book.title}
				dd #{book.summary}
			else
				p This author has no books.
	hr
	p
		a.text-danger(href=author.url + '/delete') Delete author
	p
		a.text-warning(href=author.url + '/update') Update author
